<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4AC0F4"
    android:orientation="vertical">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#4BC0DF"
        android:src="@drawable/doctor2" />

    <TextView
        android:id="@+id/after"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#454131"
        android:text=" @Made by Gachon Univ.  "
        android:textAlignment="gravity"
        android:gravity="right"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#333030">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/diagnose"
                android:layout_width="105dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:background="@drawable/diagnosis" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="Diagnose"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/search"
                android:layout_width="120dp"
                android:layout_height="15dp"
                android:layout_gravity="start"
                android:layout_weight="4"
                android:background="@drawable/search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="Search"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
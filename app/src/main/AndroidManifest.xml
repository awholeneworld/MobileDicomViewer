<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="gachon.dicomviewer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label= "@string/app_name"
        android:theme="@style/AppTheme"
        android:supportsRtl="true"
        android:largeHeap="true"
        tools:replace="android:theme">

        <activity android:name="gachon.dicomviewer.SplashActivity"
            android:screenOrientation="portrait">

            <intent-filter>

                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>

        </activity>

        <activity android:name="gachon.dicomviewer.HomeActivity">

        </activity>

        <activity android:name="gachon.dicomviewer.FileChooseActivity">

        </activity>

        <activity
            android:name="gachon.dicomviewer.DICOMViewActivity"
            android:label="@string/app_name">
        </activity>

        <activity android:name="gachon.dicomviewer.DICOMSearchResultActivity">

        </activity>

        <activity android:name="gachon.dicomviewer.MainActivity">

        </activity>

    </application>

</manifest>
